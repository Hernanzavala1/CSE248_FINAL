<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background3">

    <TextView
        android:id="@+id/ZipPrompt"
        android:layout_width="130dp"
        android:layout_height="49dp"

        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/EmailPrompt"
        android:layout_marginBottom="212dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Zip Code:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/passwordPrompt"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="132dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Password:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/userName2"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/UserNamePrompt"
        android:layout_below="@id/ResgistrationText"
        android:ems="10"
        android:gravity="center"
        android:hint="User Name"
        android:textColorHint="Black"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/EmailPrompt"
        android:layout_width="130dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="193dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Email:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ResgistrationText"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:padding="5dp"
        android:text="Registration"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/UserNamePrompt"
        android:layout_width="130dp"
        android:layout_height="41dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="User Name:"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/Password"
        android:layout_width="217dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/UserName"
        android:layout_below="@+id/UserName"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="133dp"
        android:layout_toRightOf="@+id/passwordPrompt"
        android:ems="10"
        android:gravity="center"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="Black" />

    <EditText
        android:id="@+id/Email"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/EmailPrompt"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/EmailPrompt"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:textColorHint="Black"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/Sign_UpBtn"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="93dp"
        android:layout_marginStart="55dp"
        android:padding="10dp"
        android:text="Sign Up"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Cancel_Btn"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/Sign_UpBtn"
        android:layout_alignTop="@+id/Sign_UpBtn"
        android:layout_marginEnd="37dp"
        android:text="Cancel"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/ZipCode"
        android:layout_width="236dp"
        android:layout_height="49dp"
        android:layout_alignBottom="@+id/ZipPrompt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/Email"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@id/ZipPrompt"
        android:gravity="center"
        android:textColorHint="Black"
        android:ems="10"
        android:hint="Zip Code"
        android:inputType="number" />

</RelativeLayout>